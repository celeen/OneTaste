<h3>Sign Up</h3>
<%= form_for @user, html: {class: "signup"} do |f| %>
<%= f.text_field :username, :placeholder => "Username", id: "username" %>
<%= f.text_field :email, :placeholder => "Email", id: "email" %>
<%= f.password_field :password, :placeholder => "Password", id: "password" %>
<%= f.file_field :avatar, :placeholder => "Upload an avatar", id: "avatar" %>
<%= f.submit "Sign Up!"%>

<% end %>
